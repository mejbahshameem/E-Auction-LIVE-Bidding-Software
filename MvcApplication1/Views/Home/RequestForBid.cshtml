@{
    ViewBag.Title = "RequestForBid";
    Layout = "~/Views/Shared/_mytemplate.cshtml";
}

 
 <title>E-Auction | Request For Bid</title>
<style>
    #form1 {
    display: block;
    margin-bottom: 330px;
    margin-top: 80px;
    overflow: hidden;
}
     #form2 {
    display: block;
    margin-bottom: 330px;
    margin-top: 80px;
    overflow: hidden;
}
</style>
@if (Session["log"] != null)
{
    if (@ViewBag.error1 == 1)
    {
        <section id="form2"><!--form-->
		<div class="container">
			<div class="row">
                <div class="col-sm-4">
					<div class="signup-form"><!--sign up form-->
						<h2>Post Your Bid Request Here!</h2>
						 @using (Html.BeginForm("RequestForBid", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
       {
                           
							<input type="text" placeholder="Product Name" name="pn"/>
                              
							<input type="text" placeholder="Short Details" name="sd"/>
                             <input type="text" placeholder="Minimum Bidding Price"  name="mbp"/>
                            <input type="text" placeholder=  "Request Bid Time Interval"  name="bti"/>
							<input type="text" placeholder="File Name"  name="fn"/>
                           <input style="color:red" type="file" name="image"/>
         
                           
                              
  							<button type="submit" class="btn btn-default" name="submit">Post</button>
         }
					</div><!--/sign up form-->
				</div>
                </div>
                </div>
		
	</section><!--/form-->
    
    }
    else{
     <section id="form1"><!--form-->
		<div class="container">
			<div class="row">
                <div class="col-sm-4">
					<div class="signup-form"><!--sign up form-->
						<h2>Post Your Bid Request Here!</h2>
						 @using (Html.BeginForm("RequestForBid", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
       {
                           
							<input type="text" placeholder="Product Name" name="pn"/>
                              
							<input type="text" placeholder="Short Details" name="sd"/>
                             <input type="text" placeholder="Minimum Bidding Price"  name="mbp"/>
                            <input type="text" placeholder=  "Request Bid Time Interval"  name="bti"/>
							<input type="text" placeholder="File Name/ Prefered Size268*249px"  name="fn"/>
                           <input style="color:red" type="file" name="image"/>
         
                           
                              
  							<button type="submit" class="btn btn-default" name="submit">Post</button>
         }
					</div><!--/sign up form-->
				</div>
                </div>
                </div>
		
	</section><!--/form-->}
    
}
else{
  <section id="form"><!--form-->
		<div class="container">
			<div class="row">
				<div class="col-sm-4 col-sm-offset-1">
					<div class="login-form"><!--login form-->
						<h2>login & post your ad</h2>
						
             @using (Html.BeginForm("login", "Home", FormMethod.Post))
             {
							<input type="text" placeholder="User Name" name="uname"/>
							<input type="password" placeholder="Password" name="password"/>
							
							<button type="submit" class="btn btn-default" name="submit1">Login</button>
             }
					</div><!--/login form-->
				</div>
				<div class="col-sm-1">
					<h2 class="or">OR</h2>
				</div>
				<div class="col-sm-4">
					<div class="signup-form"><!--sign up form-->
						<h2>New to E-Auction? Signup Now!</h2>
						 @using(Html.BeginForm("Regis","Home",FormMethod.Post)){
                           
							<input type="text" placeholder="UserName" name="uname"/>
                              
							<input type="email" placeholder="Email Address" name="mail"/>
							<input type="password" placeholder="Password"  name="pword"/>
                              
                            <input type="password" placeholder="RetypePassword"  name="cpword"/>
                              
  							<button type="submit" class="btn btn-default" name="submit">Signup</button>
         }
					</div><!--/sign up form-->
				</div>
			</div>
		</div>
	</section><!--/form-->
	
	
}