@model MvcApplication1.Models.Product

@{
    ViewBag.Title = "postreq";
    Layout = "~/Views/Shared/_admin.cshtml";
}
<style>
table {
    border-collapse: collapse;
    width: 100%;
}

th, td {
    text-align: left;
    padding: 15px;
}

tr:nth-child(even){background-color: #f2f2f2}

    th {
        background-color: #4CAF50;
        color: white;
    }
    #form1 {
    display: block;
    margin-bottom: 185px;
    margin-top: 61px;
    overflow: hidden;
    width: 50%;
    padding-top: -49px;
    padding-left: 72px;
}
</style>
<head>
    <link href="@Url.Content("~/Content/mytemplate/")css/bootstrap.min.css" rel="stylesheet">
    <link href="@Url.Content("~/Content/mytemplate/")css/font-awesome.min.css" rel="stylesheet">
    <link href="@Url.Content("~/Content/mytemplate/")css/prettyPhoto.css" rel="stylesheet">
    <link href="@Url.Content("~/Content/mytemplate/")css/price-range.css" rel="stylesheet">
    <link href="@Url.Content("~/Content/mytemplate/")css/animate.css" rel="stylesheet">
    <link href="@Url.Content("~/Content/mytemplate/")css/main.css" rel="stylesheet">
    <link href="@Url.Content("~/Content/mytemplate/")css/responsive.css" rel="stylesheet">
</head>
<section id="form1">
@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Product</legend>

       

        <div class="editor-label">
            @Html.LabelFor(model => model.Category)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Category)
            @Html.ValidationMessageFor(model => model.Category)
        </div>
       
        <div class="editor-label">
            @Html.LabelFor(model => model.MaxTime)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.MaxTime)
            @Html.ValidationMessageFor(model => model.MaxTime)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.BiddingTime)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.BiddingTime)
            @Html.ValidationMessageFor(model => model.BiddingTime)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.CountClick)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.CountClick)
            @Html.ValidationMessageFor(model => model.CountClick)
        </div>

       
        <div class="editor-label">
            @Html.LabelFor(model => model.Date )
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Date,new { htmlAttributes = new { placeholder = "MM/DD/YYYY"} })
            @Html.ValidationMessageFor(model => model.Date)
        </div>

        <p>
            <input type="submit" value="Post" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to Tables", "Table")
</div>
    </section>
